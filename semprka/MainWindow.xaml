<Window x:Class="semprka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:semprka"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="CanvasArea" Background="White">
            <Rectangle x:Name="Peg1" Width="10" Height="150" Fill="Black" Canvas.Left="100" Canvas.Top="50"/>
            <Rectangle x:Name="Peg2" Width="10" Height="150" Fill="Black" Canvas.Left="300" Canvas.Top="50"/>
            <Rectangle x:Name="Peg3" Width="10" Height="150" Fill="Black" Canvas.Left="500" Canvas.Top="50"/>
        </Canvas>
        <Button Content="Запустить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Click="StartButton_Click"/>
    </Grid>
</Window>
